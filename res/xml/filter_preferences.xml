<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
   <PreferenceCategory
            android:title="@string/filter_preferences_title">
        <CheckBoxPreference
                android:key="favorite_filter"
                android:title="@string/favorite_filter_title"
                android:summary="@string/favorite_filter_summary" 
                android:defaultValue="false"
                />
        <CheckBoxPreference
				android:key="bikes_filter"
				android:title="@string/bikes_filter_title"
				android:summary="@string/bikes_filter_summary"
				android:defaultValue="false"
				/>
        <CheckBoxPreference
				android:key="slots_filter"
				android:title="@string/slots_filter_title"
				android:summary="@string/slots_filter_summary"
				android:defaultValue="false"
				/>
				
    </PreferenceCategory>
   <PreferenceCategory
            android:title="@string/distance_filter_preferences_title">
		<CheckBoxPreference
            android:key="enable_distance_filter"
			android:title="@string/enable_distance_filter_title" 
            android:summary="@string/enable_distance_filter_summary"
            android:defaultValue="false"
        />
		<fr.openbike.ui.widget.SeekBarPreference
                android:dependency="enable_distance_filter"
                android:key="distance_filter"
                android:defaultValue="1000"
                android:title="@string/distance_filter_title" 
                />
    </PreferenceCategory>
</PreferenceScreen>
