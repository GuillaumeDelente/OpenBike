<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="fr.openbike"
      android:versionCode="3"
      android:versionName="Beta 1">
      <supports-screens 
      	android:smallScreens="true"
      	android:normalScreens="true"
      	android:largeScreens="true"
       />
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="OpenBike"> <!--  android:debuggable="true"-->
    	<uses-library android:name="com.google.android.maps" />
        <activity android:name=".list.OpenBikeListActivity"
                  android:label="@string/app_name"
                  android:launchMode = "singleTop"
                  android:theme="@android:style/Theme.NoTitleBar"
                  >
                <intent-filter>
                	<action android:name="android.intent.action.MAIN" />
                	<category android:name="android.intent.category.LAUNCHER" />
            	</intent-filter>
            	
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <!-- No category needed, because the Intent will specify this class component-->
            </intent-filter>
            	
        	<meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>

        </activity>
         <activity android:name=".map.OpenBikeMapActivity" 
         		android:launchMode = "singleTop" 
        		android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:name=".list.ListFilterActivity" 
					android:label="@string/configuration_title" />
					
		<activity android:name=".map.MapFilterActivity" 
					android:label="@string/configuration_title" />
		<activity android:name=".map.StationMapFilterActivity" 
					android:label="@string/configuration_title" />
		<activity android:name=".StationDetails"         		
					android:launchMode = "singleTop" 
        			android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        			
        <meta-data android:name="android.app.default_searchable"
                   android:value=".list.OpenBikeListActivity" />
                   
        <provider android:name=".database.StationsProvider"
                  android:authorities="fr.openbike.StationsProvider" />
    </application>
<uses-sdk android:minSdkVersion="4" />
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<uses-permission android:name="android.permission.INTERNET" />
</manifest> 