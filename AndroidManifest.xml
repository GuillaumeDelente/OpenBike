<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="fr.vcuboid"
      android:versionCode="1"
      android:versionName="1.0">
      <supports-screens 
                  android:smallScreens="false"
                  android:normalScreens="true"
                  android:largeScreens="true"
                  />
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
    	<uses-library android:name="com.google.android.maps" />
        <activity android:name=".map.VcuboidMapActivity" android:label="@string/app_name">
            </activity>
        <activity android:name=".list.VcuboidListActivity"
                  android:label="@string/app_name"
                  >
                    <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".list.ListFilterActivity" android:label="@string/app_name" />
		<activity android:name=".map.MapFilterActivity" />
		<activity android:name=".StationDetails" />
    </application>
<uses-sdk android:minSdkVersion="4" />
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<uses-permission android:name="android.permission.INTERNET" />
</manifest> 